{
  "name": "pointr",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "build": "cd client && yarn run build",
    "initialize": "cd client && yarn",
    "dev": "yarn && concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && yarn install && yarn install --only=dev --no-shrinkwrap && yarn run build"
  },
  "dependencies": {
    "apollo-server-express": "^2.12.0",
    "bcrypt": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-resolvers": "^0.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.10"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.0.1",
    "mocha": "^7.1.2",
    "nodemon": "^1.19.1"
  }
}
